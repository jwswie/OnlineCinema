@{
    ViewData["Title"] = "Film Page";
}

<div class="container">
    <header class="site-header">
        <h1 class="site-title">Fresh Cucumbers</h1>
    </header>

    <div class="column two-thirds">
        <img width="800" height="533" alt="PosterImage" />
        <h1 class="entry-title">Film Name</h1>
        <p>Release Year</p>
        <p>Director</p>
        <p>Scenarist</p>
        <blockquote><p>Description</p></blockquote>
        <a class='portfoliotype'>Actors</a>
    </div>
</div>

<style>
    body {
        background: #fff;
        margin: 0;
        letter-spacing: 1px;
    }

    html {
        border: 7px solid #2a7831;
    }

    *, *:before, *:after {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    .container {
        margin: 0 auto;
        width: 960px;
    }

    .column {
        float: left;
        margin-bottom: 0;
        padding: 0 15px;
    }

        .column.two-thirds {
            width: 66.7%;
        }

        .column.third {
            width: 33.3%;
        }

    .site-header {
        padding-top: 2em;
        padding-bottom: 1em;
    }

    .site-title {
        font-family: 'Herr Von Muellerhoff';
        font-size: 60px;
        font-weight: 300;
        letter-spacing: 2px;
        line-height: 1;
        margin-top: 25px;
        margin-bottom: 20px;
        text-align: center;
    }

    .widget-title {
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: left;
        text-transform: uppercase;
    }

    p {
        margin-bottom: 1.5em;
        color: #666666;
    }

    blockquote {
        border-left: 5px solid #2a7831;
        margin-bottom: 20px;
        padding: 10px 20px;
    }

    img {
        height: auto;
        max-width: 100%;
        padding: 1em 0 0em 0;
    }

    .wpcf7 input[type="text"], .wpcf7 textarea {
        background-color: #e6e6e6;
        border: 1px solid #e6e6e6;
        padding: 10px;
        width: 100%;
    }

        .wpcf7 input[type="text"]:focus, .wpcf7 textarea:focus {
            background-color: #fff;
            color: #111;
        }

    .wpcf7 input[type="submit"] {
        border: 1px solid #4d4d4d;
        background: #4d4d4d;
        color: #fff;
        cursor: pointer;
        font-size: 14px;
        font-size: 1.4rem;
        line-height: 1;
        padding: 1em 1em 0.9em;
        width: 100%;
        transition: all 0.2s ease-in-out;
    }

        .wpcf7 input[type="submit"]:hover {
            opacity: 0.6;
            transition: all 0.2s ease-in-out;
        }

    .entry-title {
        font-weight: 700;
        font-size: 20px;
        letter-spacing: 2px;
        line-height: 1.4;
        text-transform: uppercase;
    }
</style>