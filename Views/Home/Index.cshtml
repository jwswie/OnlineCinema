<style>
    body {
        background: #fff;
        margin: 0;
        letter-spacing: 1px;
    }

    html {
        border: 7px solid #2a7831;
    }

    .container {
        margin: 0 auto;
        width: 960px;
    }

    .site-header {
        padding-top: 2em;
        padding-bottom: 1em;
    }

    .site-title {
      
        font-size: 60px;
        font-weight: bold;
        letter-spacing: 2px;
        line-height: 1;
        margin-top: 25px;
        margin-bottom: 20px;
        text-align: center;
    }

    .site-description {
        font-size: 14px;

        font-weight: 300;
        margin-top: -15px;
        margin-bottom: 35px;
        text-align: center;
        letter-spacing: 0px;
    }

    .menu {
        display: table;
        margin: 0 auto;
        color: black;
    }

    .main-navigation {
        background-color: #fff;
        font-size: 14px;
        font-weight: 700;
        letter-spacing: 1px;
        padding: 15px 0;
        border-top: 1px solid;
        border-bottom: 1px solid;
        text-transform: uppercase;
    }

        .main-navigation li {
            display: inline;
            float: left;
            margin: 0 1em;
            position: relative;
        }

    .portfoliogrid {
        margin-left: -1.2%;
        margin-right: -1.2%;
        width: 30.93%;
    }

        .portfoliogrid .entry-title {
            font-size: 14px;
            color: #111;
            font-weight: 400;
        }

    a.portfoliotype:after {
        content: '/';
        margin-left: 5px;
    }

    a.portfoliotype {
        color: black;
        text-decoration: none;
    }

    img {
        height: 500px;
        max-width: 100%;
        margin-top: 20px;
    }

    .entry-title {
        font-weight: 700;
        font-size: 20px;
        letter-spacing: 2px;
        line-height: 1.4;
        text-transform: uppercase;
        color: #222;
        text-decoration: none;
    }

    .FindTextBox, .FindTextBox textarea {
        background-color: #e6e6e6;
        border: 1px solid #e6e6e6;
        padding: 10px;
        width: 500px;
    }

    .FindTextBox:focus, .FindTextBox textarea:focus {
        background-color: #fff;
        color: #111;
    }

    .FindButton {
        border: 1px solid #2a7831;
        border-radius: 2px;
        background: #2a7831;
        color: #fff;
        cursor: pointer;
        font-size: 14px;
        font-size: 1.4rem;
        transition: all 0.2s ease-in-out;
        height: 35px;
        width: 100px;
    }

    .FindButton:hover {
        opacity: 0.6;
        transition: all 0.2s ease-in-out;
    }
</style>